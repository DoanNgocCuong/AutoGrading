<div class="user-profile">
    <div class="settings-container">
        <div class="card">
            <h4 class="text-center" style="color: #064050">CÀI ĐẶT</h4>
            <div class="section">
                {{!-- <h3>
                    <i class="fas fa-user"></i> Hồ sơ
                </h3> --}}
                <hr>

                <form>
                    <div class="form-group">
                        <label for="name">Họ và tên*  <span class="badge">Giáo viên</span></label>
                        <input type="text" id="name" class="form-control" placeholder="Bùi Khánh Linh" value="{{this.name}}" >
                    </div>
                    <p></p>
                    <div class="form-group">
                        <label for="dob">Ngày tháng năm sinh *</label>
                        <input type="text" id="dob" class="form-control" placeholder="29/02/2003" value="{{this.dob}}" readonly>
                    </div>
                    <p></p>
                    <div class="form-group">
                        <label for="gioi_tinh">Giới tính *</label>
                        <input type="text" id="gioi_tinh" class="form-control" placeholder="Nữ" value="{{this.gioi_tinh}}" readonly>
                    </div>
                    <p></p>
                    <p></p>
                    <p></p>
                </form>
            </div>
            <button type="submit" class="btn btn-third">Cập nhật hồ sơ</button>

        </div>
    </div>
</div>


