<div class="mt-4">
    <div class="row">

        {{#each thu_muc_cau_hoi_s}}
        <div class="col-sm-6 col-lg-12">
            
            <div class="card mb-4 card-course-item">
                <div class="row g-0">
                <div class="col-md-2">
                    <img src="{{this.avt}}" class="card-img-top" alt="{{this.name}}" style="width: 100%; height: auto;">                
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                            <p class="card-text">
                                Môn học: {{this.mon_hoc}}
                            </p>
                            <p class="card-text">
                                Số lượng câu hỏi: {{this.number_of_question}}
                            </p>
                            <a href="#" class="btn btn-primary">Chỉnh sửa</a>
                            <a href="#" class="btn btn-primary">Xóa</a>
                    </div>
                </div>
                
            </div>
            </div>
        </div>
        {{/each}}

    </div>
</div>